# Hearthgate Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
CLIENT_URL=http://localhost:3000
SERVER_URL=http://localhost:3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/hearthgate

# JWT and Session Secrets
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-key-here

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Steam API
STEAM_API_KEY=your-steam-api-key

# Epic Games OAuth (requires developer access)
EPIC_CLIENT_ID=your-epic-client-id
EPIC_CLIENT_SECRET=your-epic-client-secret

# Riot Games API
RIOT_API_KEY=your-riot-api-key

# Twitch OAuth
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret

# Instructions:
# 1. Discord: Create an application at https://discord.com/developers/applications
# 2. Steam: Get API key at https://steamcommunity.com/dev/apikey
# 3. Epic: Apply for developer access at https://dev.epicgames.com/
# 4. Riot: Get API key at https://developer.riotgames.com/
# 5. Twitch: Create an application at https://dev.twitch.tv/console/apps